.game{
    height: 100%;
    -webkit-overflow-scrolling:touch;
    -webkit-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;
    text-align: center;
}
button{
    background: 0 0;
    background-image: none;
    outline: 0;
    border: 0;
    cursor: pointer;
    padding: 0;
}
.play-button {
    width: 100px;
    height: 45px;
    line-height: 45px;
    border-radius: 30px;
    background-color: rgba(0,0,0,.6);
    position: relative;
    transition: background-color .2s;
    color:#fff;
}
.play-button:hover{
    background-color: rgba(0,0,0,.5);
}